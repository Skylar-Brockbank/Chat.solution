@{
  Layout = "_Layout";
}
@using Chat.Models


<h2>Get your chat on you two!</h2>

@if(@Model.Count == 0)
{
  <p>There are no messages with this user</p>
}
else
{
  <div id="message-box">
  @foreach(Message m in Model)
  {
    if(m.SenderId==ViewBag.MyId)
    {
    <p>@ViewBag.MyName.UserName: @m.Text </p>
    }else
    {
      <p>@ViewBag.OtherName.UserName: @m.Text </p>
    }
  }
  </div>
}
